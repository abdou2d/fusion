<!DOCTYPE html>
<html>
  <head>
    <title>Fusion</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= render "shared/header" %>
    <% flash.each do |type, msg| %>
      <div class="  <%= type %> ">
        <%= msg %>
      </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>

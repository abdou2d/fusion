<%= stylesheet_link_tag 'nav' %>
<div class="container vh-100">
  <div class="container border-bottom p-2">
    <div class=" d-flex justify-content-center justify-content-lg-start">
      <div class="row"><%= link_to root_path do %>
        <%= image_pack_tag("dra.svg", width: "220px", :class => "navbar-brand") %>
      <% end %>
      </div>
    </div>
  </div>
<div class="row h-75">
  <div class="col-md-4 bg-white shadow-sm p-4 m-auto" style="min-width: 400px;">
  <h2>تسجيل الدخول</h2>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
        <div class="d-flex justify-content-between">
          <div class="">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
             <small> <%= link_to "Forgot your password ?", new_password_path(resource_name), class: "fw-bold" %></small><br />
            <% end %>
          </div>
          <div class="">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
    </div>

    <div class="form-actions d-grid gap-2">
      <%= f.button :submit, "دخول" %>
    </div>
  <% end %>

    </div>
  </div>
</div>
